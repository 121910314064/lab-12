####################################################################################################################################################
def mergeSort(a): 
	
	current_size = 1
	
	
	while current_size < n - 1: 
		
		left = 0
		
		while left < n-1: 
			
			
			mid = min((left + current_size - 1),(n-1))
			
			
			right = ((2 * current_size + left - 1, 
					n - 1)[2 * current_size 
						+ left - 1 > n-1]) 
							
			
			merge(a, left, mid, right) 
			left = left + current_size*2
			
		
		current_size = 2 * current_size 


def merge(a1, l, m, r): 
	n1 = m - l + 1
	n2 = r - m 
	L = [0] * n1 
	R = [0] * n2 
	for i in range(0, n1): 
		L[i] = a1[l + i] 
	for i in range(0, n2): 
		R[i] = a1[m + i + 1] 

	i, j, k = 0, 0, l 
	while i < n1 and j < n2: 
		if L[i] > R[j]: 
			a1[k] = R[j] 
			j += 1
		else: 
			a1[k] = L[i] 
			i += 1
		k += 1

	while i < n1: 
		a1[k] = L[i] 
		i += 1
		k += 1

	while j < n2: 
		a1[k] = R[j] 
		j += 1
		k += 1



a =[]
n = int(input("enter the number "))
for i in range(0,n):
    N = int(input())
    a.append(N)

print("Given array is ") 
print(a) 
mergeSort(a) 

print("Sorted array is ") 
print(a) 
###################################################################################################################################################
OUTPUT:
####################################################################################################################################################
enter the number 3
21
87
95
Given array is 
[21, 87, 95]
Sorted array is 
[21, 87, 95]
